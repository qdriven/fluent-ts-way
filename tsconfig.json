{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [],
  "exclude": [
    "**/node_modules",
    "node_modules",
    ".husky",
    "**/*.css",
    "./tailwind.config.js",
    "**/.yalc/",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
